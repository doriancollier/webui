{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "DORKOS_PORT",
    "DORKOS_DEFAULT_CWD",
    "DORKOS_BOUNDARY",
    "DORKOS_LOG_LEVEL",
    "DORK_HOME",
    "DORKOS_PULSE_ENABLED",
    "TUNNEL_ENABLED",
    "TUNNEL_PORT",
    "TUNNEL_AUTH",
    "TUNNEL_DOMAIN",
    "NGROK_AUTHTOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["generate:api-docs", "^build"],
      "outputs": ["dist/**", "dist-server/**", "dist-obsidian/**", ".next/**"],
      "env": ["NODE_ENV", "VITE_*", "NEXT_PUBLIC_*", "POSTHOG_*"]
    },
    "generate:api-docs": {
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "pack": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false
    }
  }
}
